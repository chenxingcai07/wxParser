/**
 * wxParser 基础样式
 */

view {
  word-break: break-all;
  overflow: auto;
  max-width: 100%;
}

.wxParser-inline {
  display: inline;
  margin: 0;
  padding: 0;
}

.wxParser-div {
  margin: 0;
  padding: 0;
}

.wxParser-p {
  margin: 5px 0;
}

.wxParser-h1 {
  font-size: 2em;
  margin: .67em 0
}

.wxParser-h2 {
  font-size: 1.5em;
  margin: .75em 0
}

.wxParser-h3 {
  font-size: 1.17em;
  margin: .83em 0
}

.wxParser-h4 {
  margin: 1.12em 0
}

.wxParser-h5 {
  font-size: .83em;
  margin: 1.5em 0
}

.wxParser-h6 {
  font-size: .75em;
  margin: 1.67em 0
}

.wxParser-h1 {
  font-size: 18px;
  font-weight: 400;
  margin-bottom: .9em;
}

.wxParser-h2 {
  font-size: 16px;
  font-weight: 400;
  margin-bottom: .34em;
}

.wxParser-h3 {
  font-weight: 400;
  font-size: 15px;
  margin-bottom: .34em;
}

.wxParser-h4 {
  font-weight: 400;
  font-size: 14px;
  margin-bottom: .24em;
}

.wxParser-h5 {
  font-weight: 400;
  font-size: 13px;
  margin-bottom: .14em;
}

.wxParser-h6 {
  font-weight: 400;
  font-size: 12px;
  margin-bottom: .04em;
}

.wxParser-h1,
.wxParser-h2,
.wxParser-h3,
.wxParser-h4,
.wxParser-h5,
.wxParser-h6,
.wxParser-b,
.wxParser-strong {
  font-weight: bolder
}

.wxParser-i,
.wxParser-cite,
.wxParser-em,
.wxParser-var,
.wxParser-address {
  font-style: italic
}

.wxParser-pre,
.wxParser-tt,
.wxParser-code,
.wxParser-kbd,
.wxParser-samp {
  font-family: monospace
}

.wxParser-pre {
  white-space: pre
}

.wxParser-big {
  font-size: 1.17em
}

.wxParser-small,
.wxParser-sub,
.wxParser-sup {
  font-size: .83em
}

.wxParser-sub {
  vertical-align: sub
}

.wxParser-sup {
  vertical-align: super
}

.wxParser-s,
.wxParser-strike,
.wxParser-del {
  text-decoration: line-through
}

.wxParser-strong,
.wxParser-s {
  display: inline
}

.wxParser-a {
  color: deepskyblue;
  word-break: break-all;
  overflow: auto;
}

.wxParser-video {
  text-align: center;
  margin: 10px 0;
}

.wxParser-video-video {
  width: 100%;
}

.wxParser-img {
  background-color: #efefef;
  overflow: hidden;
}

.wxParser-blockquote {
  margin: 0;
  padding: 10px 0 10px 5px;
  font-family: Courier, Calibri, "宋体";
  background: #f5f5f5;
  border-left: 3px solid #dbdbdb;
}

.wxParser-ul {
  margin: 20rpx 10rpx;
}

.wxParser-li,
.wxParser-li-inner {
  display: flex;
  align-items: baseline;
  margin: 10rpx 0;
}

.wxParser-li-text {
  align-items: center;
  line-height: 20px;
}

.wxParser-li-circle {
  display: inline-flex;
  width: 5px;
  height: 5px;
  background-color: #333;
  margin-right: 5px;
  border-radius: 50%;
}

.wxParser-li-square {
  display: inline-flex;
  width: 10rpx;
  height: 10rpx;
  background-color: #333;
  margin-right: 5px;
}

.wxParser-li-ring {
  display: inline-flex;
  width: 10rpx;
  height: 10rpx;
  border: 2rpx solid #333;
  border-radius: 50%;
  background-color: #fff;
  margin-right: 5px;
}

.wxParser-u {
  text-decoration: underline;
}

.wxParser-hide {
  display: none;
}

.wxEmoji {
  width: 16px;
  height: 16px;
}

.wxParser-tr {
  display: flex;
  border-right: 1px solid #e0e0e0;
  border-bottom: 1px solid #e0e0e0;
}

.wxParser-th,
.wxParser-td {
  flex: 1;
  padding: 5px;
  font-size: 28rpx;
  border-left: 1px solid #e0e0e0;
  word-break: break-all;
}

.wxParser-td:last {
  border-top: 1px solid #e0e0e0;
}

.wxParser-th {
  background: #f0f0f0;
  border-top: 1px solid #e0e0e0;
}
